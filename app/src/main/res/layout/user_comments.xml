<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="1dp"
    android:paddingTop="1dp"
    android:paddingRight="1dp"
    android:paddingBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@drawable/listbeack"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eventImg"
                android:layout_width="103dp"
                android:layout_height="81dp"
                android:foregroundGravity="left"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/eventType_c"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:text="MediumText"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#882222"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/eventDesc_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/mediumtext_c"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="16sp"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/userEmailComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MediumText"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="16sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/contentComment"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="MediumText"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#3F51B5"
                android:textSize="16sp"
                android:typeface="sans" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>