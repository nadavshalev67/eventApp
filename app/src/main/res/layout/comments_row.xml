<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <TextView
        android:id="@+id/userEmailComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/delete_comment_btn"
        android:text="example@gmail.com"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/contentComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userEmailComment"
        android:layout_toLeftOf="@id/delete_comment_btn"
        android:text="Example of comment"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/delete_comment_btn"
        android:layout_width="46dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"

        android:layout_marginTop="10dp"
        android:background="@drawable/deletebutton" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/contentComment"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:background="#C1C1C1" />

</RelativeLayout>